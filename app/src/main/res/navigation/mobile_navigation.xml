<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/DamageFragment">

    <fragment
        android:id="@+id/DamageFragment"
        android:name="com.bramgoedvriend.glaswerk.damage.DamageFragment"
        android:label="@string/title_damage"
        tools:layout="@layout/fragment_damage">
        <action
            android:id="@+id/action_DamageFragment_to_damageStudentFragment"
            app:destination="@+id/damageStudentFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>
    <fragment
        android:id="@+id/OrdersFragment"
        android:name="com.bramgoedvriend.glaswerk.orders.OrdersFragment"
        android:label="@string/title_orders"
        tools:layout="@layout/fragment_orders" />
    <fragment
        android:id="@+id/stockFragment"
        android:name="com.bramgoedvriend.glaswerk.stock.stockFragment"
        android:label="@string/title_stock"
        tools:layout="@layout/fragment_stock" />
    <fragment
        android:id="@+id/studentsFragment"
        android:name="com.bramgoedvriend.glaswerk.students.studentsFragment"
        android:label="@string/title_students"
        tools:layout="@layout/fragment_students" />
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.bramgoedvriend.glaswerk.settings.settingsFragment"
        android:label="@string/title_settings" />
    <fragment
        android:id="@+id/damageStudentFragment"
        android:name="com.bramgoedvriend.glaswerk.damage.damage_student.DamageStudentFragment"
        android:label="@string/title_select_student">
        <argument
            android:name="itemId"
            app:argType="integer" />
        <argument
            android:name="itemName"
            app:argType="string" />
    </fragment>
</navigation>