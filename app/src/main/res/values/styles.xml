<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>
        <item name="android:fontFamily">@font/allerta</item>
        <item name="fontFamily">@font/allerta</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="Card" parent="CardView">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>

    <style name="NormalCard" parent="Card">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">5dp</item>
        <item name="cardCornerRadius">5dp</item>
        <item name="cardElevation">2dp</item>
    </style>

    <style name="CardPopup" parent="Card">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="cardCornerRadius">15dp</item>
    </style>
</resources>
